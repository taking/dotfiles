#!/usr/bin/env bash

export DOTFILES=$HOME/.DOTFILES
VSCodeSettingsFile="${DOTFILES}/config/vscode-settings.json"

# VS Code 설정 파일 경로
VSCodeDestination="${HOME}/Library/Application Support/Code/User/settings.json"
# Cursor 설정 파일 경로
CursorDestination="${HOME}/Library/Application Support/Cursor/User/settings.json"

# 기존 파일 또는 심볼릭 링크 제거
rm -f "$VSCodeDestination"
rm -f "$CursorDestination"

# 심볼릭 링크 생성
ln -s "$VSCodeSettingsFile" "$VSCodeDestination"
ln -s "$VSCodeSettingsFile" "$CursorDestination"